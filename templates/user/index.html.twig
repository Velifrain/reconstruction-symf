{% extends 'base.html.twig' %}

{% block title %}{{ 'info.edit_profile'|trans }}{% endblock %}

{% block content %}

    {% block breadcrumb %}
        <!-- PAGE TITLE -->
        <section class="bg-light p-0">
            <div class="container py-4">
                <h1 class="h4">
                    {{ 'Settings'|trans }}
                </h1>
                <nav aria-label="breadcrumb">
